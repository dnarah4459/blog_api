generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POOLED_NEON_DB_CONNECTION")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String
  firstName  String
  lastName   String
  username   String
  salt       String
  hash       String
  createdAt  DateTime  @default(now())
  posts      Post[]
  comments   Comment[]
}

model Post {
  id       Int       @id @default(autoincrement())
  title    String
  content  String
  User     User      @relation(fields: [userId], references: [id])
  userId   Int
  comments Comment[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId  Int
}